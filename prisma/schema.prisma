generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String             @id
  email             String             @unique
  name              String?
  bio               String?
  avatarUrl         String?
  preferences       Json?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  goals             Goal[]
  happiness         HappinessEntry[]
  journals          JournalEntry[]
  lifeBalance       LifeBalanceEntry[]
  projects          Project[]
  tasks             Task[]
  settings          UserSettings?
  visionBoardItems  VisionBoardItem[]
  workflowTemplates WorkflowTemplate[]
  stats             UserStats?
  challenges        DailyChallenge[]
  badges            Badge[]
  voiceJournals     VoiceJournal[]
}

model UserSettings {
  id             String  @id @default(uuid())
  userId         String  @unique
  enableProjects Boolean @default(false)
  user           User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id              String            @id @default(uuid())
  title           String
  description     String?
  status          String            @default("active")
  startDate       DateTime?
  endDate         DateTime?
  userId          String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  isPublic        Boolean           @default(false)
  shareToken      String?           @unique
  sharedAt        DateTime?
  approvalStatus  String            @default("none")
  rejectionReason String?
  comments        Comment[]
  milestones      Milestone[]
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  documents       ProjectDocument[]
  tasks           Task[]
  meetingLogs     MeetingLog[]

  @@index([userId])
  @@index([shareToken])
}

model ProjectDocument {
  id        String   @id @default(uuid())
  name      String
  type      String
  url       String
  size      Int
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model Milestone {
  id        String   @id @default(uuid())
  title     String
  date      DateTime
  completed Boolean  @default(false)
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     Task[]

  @@index([projectId])
}

model JournalEntry {
  id         String   @id @default(cuid())
  userId     String
  title      String
  content    String
  tags       String[]
  mood       Int?
  energy     Int?
  stress     Int?
  sleep      Int?
  activities Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@index([userId, createdAt])
  @@index([userId, mood])
}

model Goal {
  id          String    @id @default(uuid())
  title       String
  description String?
  progress    Int       @default(0)
  targetDate  DateTime?
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  priority    String    @default("medium")
  timeframe   String    @default("short")
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, progress])
  @@index([userId, timeframe])
}

model LifeBalanceEntry {
  id        String   @id @default(uuid())
  category  String
  score     Int
  date      DateTime @default(now())
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model HappinessEntry {
  id        String   @id @default(uuid())
  score     Int
  date      DateTime @default(now())
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VisionBoardItem {
  id        String   @id @default(uuid())
  type      String
  content   String
  metadata  Json?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id              String       @id @default(uuid())
  text            String
  completed       Boolean      @default(false)
  scheduledDate   DateTime?
  userId          String
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  milestoneId     String?
  projectId       String?
  endDate         DateTime?
  startDate       DateTime?
  color           String?      @default("#6366f1")
  description     String?
  priority        String       @default("medium")
  status          String       @default("todo")
  workflowId      String?
  workflowName    String?
  url             String?
  approvalStatus  String       @default("none") // none, pending, approved, rejected
  rejectionReason String?
  attachments     Attachment[]
  milestone       Milestone?   @relation(fields: [milestoneId], references: [id])
  project         Project?     @relation(fields: [projectId], references: [id])
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([milestoneId])
  @@index([workflowId])
}

model Attachment {
  id        String   @id @default(uuid())
  name      String
  url       String
  size      Int
  type      String
  taskId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
}

model Comment {
  id         String   @id @default(uuid())
  content    String
  authorName String
  createdAt  DateTime @default(now())
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model WorkflowTemplate {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String
  tasks       Json // WorkflowTask[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model MeetingLog {
  id         String   @id @default(uuid())
  title      String
  date       DateTime
  content    String
  audioUrl   String?
  transcript String?
  projectId  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

// ============================================
// Gamification Models
// ============================================

model UserStats {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // XP and Level
  totalXP Int @default(0)
  level   Int @default(1)

  // Streak
  currentStreak  Int       @default(0)
  longestStreak  Int       @default(0)
  lastActiveDate DateTime?

  // Statistics
  totalJournals Int @default(0)
  totalTasks    Int @default(0)
  totalMeetings Int @default(0)
  totalGoals    Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model DailyChallenge {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  date DateTime @db.Date

  // Challenge Progress
  journalCreated Boolean @default(false)
  tasksCompleted Int     @default(0)
  meetingCreated Boolean @default(false)

  // Rewards
  xpEarned    Int     @default(0)
  badgeEarned String?
  completed   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@index([userId, date])
}

model Badge {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  badgeType   String // "daily_hero", "streak_7", "journal_master", etc.
  title       String
  description String?
  icon        String? // Emoji or icon name
  earnedAt    DateTime @default(now())

  @@index([userId])
  @@index([userId, badgeType])
}

model VoiceJournal {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  audioUrl   String?
  transcript String   @db.Text
  aiSummary  String   @db.Text
  sentiment  String? // "positive", "neutral", "negative"
  mood       Int? // 1-5 scale for mood tracking
  tags       String[] // AI-generated tags

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([userId, createdAt])
  @@index([sentiment])
}
